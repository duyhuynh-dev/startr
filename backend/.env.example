# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=VC Ã— Startup Matching API
VERSION=0.1.0
API_PREFIX=/api
LOG_LEVEL=INFO

# Database (PostgreSQL)
# Default matches docker-compose.dev.yml settings
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/vc_matcher

# Redis
# Default matches docker-compose.dev.yml settings
REDIS_URL=redis://localhost:6379/0

# External API Keys (Optional - for ETL services)
# These are stubs for now, but will be needed when implementing actual integrations

# Crunchbase API (for company/funding data)
CRUNCHBASE_API_KEY=your_crunchbase_api_key_here

# Clearbit API (for company enrichment)
CLEARBIT_API_KEY=your_clearbit_api_key_here

# Plaid (for financial verification - requires OAuth setup)
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_here
PLAID_ENVIRONMENT=sandbox  # or 'production'

# CORS (comma-separated list of allowed origins, or * for all)
ALLOWED_HOSTS=*
